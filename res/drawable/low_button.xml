<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#d8eef8"
                android:endColor="#ffffff"
                android:angle="90" />
			<stroke
                android:width="1px"
                android:color="#ddd"
                android:dashWidth="1px"
                android:dashGap="1px" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>